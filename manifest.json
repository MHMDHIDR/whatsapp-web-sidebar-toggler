{
  "manifest_version": 3,
  "name": "WhatsApp Web Sidebar Toggler",
  "version": "1.0",
  "description": "Adds a toggle button for the WhatsApp Web sidebar",
  "icons": {
    "16": "icons/whatsapp-sidebar-toggler-16.png",
    "48": "icons/whatsapp-sidebar-toggler-48.png",
    "128": "icons/whatsapp-sidebar-toggler-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["storage"]
}
